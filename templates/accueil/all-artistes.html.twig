{% extends 'base.html.twig' %}
{% block title %}Les Artistes{% endblock %}
{% block body %}
<h1 class="page-title">Les Artistes</h1>
    <div class="row">
        {% for artiste in artistes %}
        <div class="col-lg-4 col-md-6">
            <div class="fiche-artiste">
                {% if artiste.oeuvres is not empty %}
                    <img src="{{ asset('images/oeuvres/'~artiste.oeuvres[0].imageName) }}" class="img-fluid"/> 
                {% endif %}
                <h2>{{ artiste.prenom|capitalize }} {{ artiste.nom|upper }}</h2>
                {{ artiste.presentation | u.truncate(105, '...') | raw }}
                <div><a href="{{ path('app_artiste',{'id':artiste.id}) }}" class="lien">Voir la pr√©sentation</a></div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}