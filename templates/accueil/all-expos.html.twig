{% extends 'base.html.twig' %}
{% block title %}Les Expositions{% endblock %}
{% block body %}
{% include 'includes/_header.html.twig' %}
<div class="all-expos">
    <h1>Les expositions</h1>
        {% for expo in expos %}
        <div>
            <h2>{{ expo.titre }}</h2>
            {% if expo.imageName %}
                <img src="{{ asset('images/annonces/'~expo.imageName) }}" />
            {% endif %}
            <h3>{{ expo.sousTitre }}</h3>
            <p>Date de début : {{ expo.dateDebut|date("d/m/Y") }}</p>
            <p>Date de fin : {{ expo.dateFin|date("d/m/Y") }}</p>
            <p>Lieu d'exposition : {{ expo.galerie.nom }}</p>
            <a href="{{ path('app_expo',{'id':expo.id}) }}" class="lien">Voir la présentation</a>
        </div>
        {% endfor %}
</div>

{% endblock %}