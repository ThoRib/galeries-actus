{% extends 'base.html.twig' %}
{% block title %}Bienvenue{% endblock %}
{% block body %}
<div class="all-espaces">
    <h2>Nos Espaces</h2>
        {% for galerie in galeries %}
            <div>
                <h2>{{ galerie.nom }}</h2>
                <div>
                    {% if galerie.imageName %}
                        <img src="{{ asset('images/galeries/'~galerie.imageName) }}" />
                    {% endif %}
                    <p>{{ galerie.presentation }}</p>
                </div>
                <a href="{{ path('app_galerie',{'id':galerie.id}) }}" class="lien">{{ galerie.nom|upper }}</a>
            </div>
        {% endfor %}
</div>

{% endblock %}
