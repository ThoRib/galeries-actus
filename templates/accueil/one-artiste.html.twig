{% extends 'base.html.twig' %}
{% block title %}{{ artiste.nom }}{% endblock %}
{% block body %}

    <div class="row justify-content-center artiste">
        <div class="col-xl-9 col-lg-10 col-md-11 one-presentation">
        <h1>{{ artiste.prenom }} {{ artiste.nom |upper }}</h1>
            {% if artiste.oeuvres|length > 0 %}
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">

                    <div class="carousel-indicators">
                        {# Création des boutons liés à chaque image #}
                        {% for oeuvre in artiste.oeuvres %}
                        {# Initialisation de la classe active sur le bouton 0 #}
                            {% if loop.index0 == 0 %}
                                {% set active = "active" %}
                            {% else %}
                                {% set active = "" %}
                            {% endif %}
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" class="{{ active }}" aria-current="true" aria-label="Slide {{ loop.index }}"></button>
                        {% endfor %}
                    </div>

                    <div class="carousel-inner">
                        {# Appel des images  #}
                        {% for oeuvre in artiste.oeuvres %}
                        {# Initialisation de la classe active à 0 #}
                        {% if loop.index0 == 0 %}
                            {% set active = "active" %}
                        {% else %}
                            {% set active = "" %}
                        {% endif %}
                        <div class="carousel-item {{ active }}">
                            <img src="{{ asset('images/oeuvres/'~oeuvre.imageName) }}" class="d-block w-100" alt="...">
                        </div>
                        {% endfor %}
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            {% endif %}
            <div>
                <p>{{ artiste.presentation }}</p>
            </div>
        </div><!--col-->
    </div><!--row-->


{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
{% endblock %}