{% extends 'base_admin.html.twig' %}

{% block title %}Les Expositions{% endblock %}

{% block body %}
<div class="admin-wrapper admin-index">
    <h1>Les Expositions</h1>
    <a href="{{ path('app_admin_exposition_new') }}">Nouvelle Exposition</a>
    <table>
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre</th>
                {# <th>SousTitre</th> #}
                <th>DateDebut</th>
                <th>DateFin</th>
                {# <th>Presentation</th> #}
                <th>Actif</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exposition in expositions %}
            <tr>
                {# <td>{{ exposition.id }}</td> #}
                <td>{{ exposition.titre }}</td>
                {# <td>{{ exposition.sousTitre }}</td> #}
                <td>{{ exposition.dateDebut ? exposition.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ exposition.dateFin ? exposition.dateFin|date('Y-m-d') : '' }}</td>
                {# <td>{{ exposition.presentation }}</td> #}
                <td>{{ exposition.actif ? 'Oui' : 'Non' }}</td>
                <td>
                {% if exposition.imageName %}
                    <img src="{{ asset('images/annonces/'~exposition.imageName) }}" />
                {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_admin_exposition_show', {'id': exposition.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_exposition_edit', {'id': exposition.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'exposition enregistr√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
