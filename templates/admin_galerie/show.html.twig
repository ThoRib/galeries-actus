{% extends 'base_admin.html.twig' %}

{% block title %}{{ galerie.nom }}{% endblock %}

{% block body %}
<div class="admin-wrapper">
    <h1>{{ galerie.nom }}</h1>
    <a href="{{ path('app_admin_galerie_index') }}" >Retour à la liste</a>
    <a href="{{ path('app_admin_galerie_edit', {'id': galerie.id}) }}">Editer</a>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ galerie.id }}</td>
            </tr>
            {# <tr>
                <th>Nom</th>
                <td>{{ galerie.nom }}</td>
            </tr> #}
            <tr>
                <th>Adresse</th>
                <td>{{ galerie.adresse }}</td>
            </tr>
            <tr>
                <th>ComplementAdresse</th>
                <td>{{ galerie.complementAdresse }}</td>
            </tr>
            <tr>
                <th>TelFixe</th>
                <td>{{ galerie.telFixe }}</td>
            </tr>
            <tr>
                <th>TelMobile</th>
                <td>{{ galerie.telMobile }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ galerie.email }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td class="text-tab">{{ galerie.presentation }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ galerie.website }}</td>
            </tr>
            <tr>
                <th>Horaires</th>
                <td>{{ galerie.horaires }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ galerie.actif ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ galerie.dateCreation ? galerie.dateCreation|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin_galerie/_delete_form.html.twig') }}
</div>
{% endblock %}
